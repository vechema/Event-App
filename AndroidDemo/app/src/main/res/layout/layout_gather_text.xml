<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text=" - "
        android:layout_height="wrap_content"
        android:id="@+id/gather_space"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="25sp"
        android:layout_centerHorizontal="true">
    </TextView>

    <TextView
        android:text="Gather Title"
        android:layout_height="wrap_content"
        android:id="@+id/gather_name"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="25sp"
        android:layout_toLeftOf="@+id/gather_space">
    </TextView>

    <TextView
        android:text="Gather Place"
        android:layout_height="wrap_content"
        android:id="@+id/gather_place"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="25sp"
        android:layout_toRightOf="@+id/gather_space"
        android:layout_centerHorizontal="true">

    </TextView>

    <TextView
        android:text="Time and Place"
        android:layout_height="wrap_content"
        android:id="@+id/gather_time"
        android:layout_width="wrap_content"
        android:layout_below="@+id/gather_name"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:ellipsize="marquee"></TextView>


</RelativeLayout>
