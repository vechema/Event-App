        android:layout_height="wrap_content"
        android:text="Pick Contacts"
        android:onClick="pickContacts"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make my gather"
        android:onClick="makeGather"
        />



</LinearLayout>
