<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" > <!-- While the button is being pressed -->
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#BC9E00" /> <!-- Outline -->
            <gradient android:angle="-90" android:startColor="#FFD600" android:endColor="#635300"  />
            <!--startColor = Top color & endColor = bottom color-->
        </shape>
    </item>
    <item android:state_selected="true"> <!-- When the button is selected -->
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FFD600" />
            <gradient android:angle="-90" android:startColor="#FFDF36" android:endColor="#BC9E00"  />
        </shape>
    </item>
    <item android:state_activated="true"> <!-- Really for when it's not selected -->
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FFDF36" />
            <solid android:color="#ffeb84" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  > <!-- when no buttons have been pressed, neutral -->
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FFD600" />
            <gradient android:angle="-90" android:startColor="#FFDF36" android:endColor="#BC9E00" />
        </shape>
    </item>
</selector>